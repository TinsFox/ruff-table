.ruff-table-wrapper {
    white-space: nowrap;
    display: flex;
    width: 100%;
}

.ruff-table-wrapper .ruff-table-th {
    width: 100px;
    color: #ffffff;
    padding: 12rpx 0rpx;
    background: #1989fa;
    font-size: 32rpx;
    font-weight: bold;
    display: inline-block;
    text-align: center;
}

.ruff-table-wrapper .ruff-table-td {
    font-size: 30rpx;
    text-align: center;
    padding: 10rpx 0rpx;
    display: inline-block;
}

.ruff-table-wrapper .ruff-table-tr:nth-child(odd) .ruff-table-td {
    background: #ffffff;
}

.ruff-table-wrapper .ruff-table-tr:nth-child(even) .ruff-table-td {
    background: #eeeeee;
}

.ofo-wrapper {
    margin: 10rpx auto;
    font-size: 28rpx;
    text-align: center;
}

.ofo-wrapper view {
    margin: 0 6rpx;
    display: inline-block;
}

.ofo-wrapper input {
    width: 30px;
    padding: 6rpx;
    vertical-align: top;
    border: 1rpx solid #eeeeee;
    border-radius: 10rpx;
    display: inline-block;
}

.ofo-wrapper .btn {
    color: #EE2222;
    padding: 10rpx 16rpx;
    box-sizing: border-box;
    border-radius: 16rpx;
    border: 1rpx solid #EE2222;
}